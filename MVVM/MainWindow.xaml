<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM"
        xmlns:cntrls="clr-namespace:Controls;assembly=Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
  <Window.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Controls;component/styles.xaml" />
      </ResourceDictionary.MergedDictionaries>
      <cntrls:ChartAdditionalInfoAndPointMultiConverter x:Key="ChartAdditionalInfoAndPointMultiConverter" />
    </ResourceDictionary>
  </Window.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />

      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <ComboBox ItemsSource="{Binding Array}" SelectedItem="{Binding TheItem}" />
    <cntrls:LineChart Grid.Row="1"
      ChartData="{Binding ChartData}"
      ChartTitle="Test Line Chart"
      ChartForeground="Wheat"
      LegendForeground="WhiteSmoke"
      BackGroundColor="DarkCyan" 
      BackGroundColorCanvas="White" 
      BackGroundColorLegend="White"    
      YNumberOfTicks="4"
      XNumberOfTicks="{Binding XTicks}"
      XValueMultiConverter="{DynamicResource ChartAdditionalInfoAndPointMultiConverter}"
      YValueConverter="{x:Static cntrls:Converters.DecimalConverter}"
      FontType="Tahoma"
      />
    <!--XValueConverter="{x:Static cntrls:Converters.DateToValueConverter}"-->
    <StackPanel Grid.Row="2">
      <Label Content="{Binding TestText}" Height="30" Foreground="{StaticResource test}" />
      <Label Content="{Binding Dt, Converter={x:Static cntrls:Converters.DateFormatConverter}}" />
    </StackPanel>

    <Button Grid.Row="3" Command="{Binding TestCommand}" Height="30" Content="Add more lines" />
  </Grid>
</Window>
